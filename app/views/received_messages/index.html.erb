<div class="page-header">
  <h1>
    Received messages
    <a href="/received_messages/new" class="btn btn-lg btn-success">New Received message</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Status</th>
        <th>Message</th>
        <th>Professional</th>
        <th>Actions</th>
      </tr>

      <% @received_messages.each do |received_message| %>
      <tr>
        <td><%= received_message.status %></td>
        <td><%= received_message.message_id %></td>
        <td><%= received_message.professional_id %></td>
        <td>
          <a href="/received_messages/<%= received_message.id %>" class="btn btn-primary">Show</a>
          <a href="/received_messages/<%= received_message.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_received_message/<%= received_message.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
