<div class="page-header">
  <h3>Site #<%= @site.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Name</dt>
      <dd><%= @site.name %></dd>

      <dt>Hospital</dt>
      <dd><%= @site.hospital.name %></dd>

      <dt>Phones:</dt>
      <dd>
        <ul class = "list-group"></ul>
        <% @site.phones.each do |phone| %>
          <li class="list-group-item">
            <%=phone.number%>
          </li>
        <%end%>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/sites" class="btn btn-primary">
        Back
      </a>
      <a href="/sites/<%= @site.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_site/<%= @site.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
