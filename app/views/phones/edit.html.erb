<!-- Validation failure messages -->
<% if @phone.errors.any? %>
  <% @phone.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Phone #<%= @phone.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_phone/<%= @phone.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for site_id -->
      <div class="form-group">
        <label for="site_id" class="control-label">
          Site
        </label>

        <input type="text" id="site_id" name="site_id" placeholder="Site" class="form-control" value="<%= @phone.site_id %>">
      </div>

      <!-- Label and input for number -->
      <div class="form-group">
        <label for="number" class="control-label">
          Number
        </label>

        <input type="text" id="number" name="number" placeholder="Number" class="form-control" value="<%= @phone.number %>">
      </div>

      <button class="btn btn-warning">
        Update Phone
      </button>
      or
      <a href="/phones/<%= @phone.id %>">Cancel</a>
    </form>
  </div>
</div>
