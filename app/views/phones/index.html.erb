<div class="page-header">
  <h1>
    Phones
    <a href="/phones/new" class="btn btn-lg btn-success">New Phone</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Hospital</th>
        <th>Site</th>
        <th>Number</th>
        <th>Actions</th>
      </tr>

      <% @phones.each do |phone| %>
      <tr>
        <td><%= phone.site.hospital.name %></td>
        <td><%= phone.site.name %></td>
        <td><%= phone.number %></td>
        <td>
          <a href="/phones/<%= phone.id %>" class="btn btn-primary">Show</a>
          <a href="/phones/<%= phone.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_phone/<%= phone.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
